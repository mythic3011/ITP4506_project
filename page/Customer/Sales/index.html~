    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Sample data for vehicles
        const vehicles = [
            {
                id: 1,
                name: "Model Name A",
                description: "Experience luxury and performance with the new Model Name A.",
                image: "https://enzostvs-cached-generation.hf.space/generate/interior+of+luxury+car?format=square"
            },
            {
                id: 2,
                name: "Model Name B",
                description: "Stand out with the style and strength of the new Model Name B.",
                image: "https://enzostvs-cached-generation.hf.space/generate/exterior+of+luxury+car?format=square"
            },
            {
                id: 3,
                name: "Model Name C",
                description: "Experience the thrill of the open road with the new Model Name C.",
                image: "https://enzostvs-cached-generation.hf.space/generate/luxury+car+in+a+garage?format=square"
            }
        ];

        // Function to create and append vehicle cards to the grid
        function renderVehicles(vehicles) {
            const $vehiclesGrid = $('#vehicles-grid');
            vehicles.forEach(vehicle => {
                const vehicleCard = `
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <img src="${vehicle.image}" alt="${vehicle.name}" class="w-full h-56 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl md:text-2xl font-bold mb-2">${vehicle.name}</h3>
                            <p class="text-gray-700 mb-4">${vehicle.description}</p>
                            <a href="TestDrive.html?id=${vehicle.id}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded">Book a Test Drive</a>
                        </div>
                    </div>
                `;
                $vehiclesGrid.append(vehicleCard);
            });
        }

        // Render the vehicles when the document is ready
        $(document).ready(function() {
            renderVehicles(vehicles);
        });

        // Countdown Timer Script
        const countdownElement = document.getElementById('countdown');
        const targetDate = new Date().getTime() + 86400000; // 24 hours from now

        function countdown() {
            const now = new Date().getTime();
            const distance = targetDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            countdownElement.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

            if (distance < 0) {
                clearInterval(countdownInterval);
                countdownElement.innerHTML = "EXPIRED";
            }
        }

        const countdownInterval = setInterval(countdown, 1000);
    </script>
